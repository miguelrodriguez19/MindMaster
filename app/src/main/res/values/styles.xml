<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="main_titles" >
        <item name="android:fontFamily">@font/popings_medium_500</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="secondary_main_titles" >
        <item name="android:fontFamily">@font/popings_medium_500</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>
    <style name="secondary_titles" >
        <item name="android:fontFamily">@font/popings_regular_400</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>
    <style name="body_large" >
        <item name="android:fontFamily">@font/popings_regular_400</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>
    <style name="rounded_corners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    <style name="textfieldsWithoutBorder" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#00FFFFFF</item>
        <item name="colorControlActivated">#5C5C5C</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>
    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="closeIconVisible">true</item>
    </style>
    <style name="cell_account_edittext" parent="Widget.AppCompat.EditText">
        <item name="android:ellipsize">end</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <style name="form_text_input_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="boxStrokeErrorColor">@color/red_error_500</item>
        <item name="errorIconDrawable">@null</item>
        <item name="startIconTint">@color/gray_dove_500</item>
        <item name="endIconTint">@color/gray_dove_500</item>
    </style>

    <style name="bottom_sheet_grip">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:background">@drawable/ellipse</item>
        <item name="android:backgroundTint">@color/gray_light</item>
        <item name="elevation">5dp</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>